<%- include('partials/header') -%>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-6">
                <h2>
                    <%= restaurant.name %>
                </h2>
                <img class="img-fluid" src="<%= restaurant.logo%>" />
                <div class="row justify-content-between">
                    <form class="col-1" action="/menu/likeRestaurant/<%= restaurant.id %>?_method=PUT" method="POST">
                        <button class="btn btn-primary fa fa-heart" type="submit"></button>
                    </form>
                    <h3 class="col-3">Likes: <%= restaurant.likes %>
                    </h3>
                    <% if (restaurant.genre) {%>
                        <p>
                            <%= restaurant.genre %>
                        </p>
                    <%}%>
                    
                    <%if(restaurant.user==user.id){ %>
                        <form action="/menu/deleteRestaurant/<%= restaurant.id %>?_method=DELETE" method="POST" class="col-3">
                            <button class="btn btn-primary fa fa-trash" type="submit"></button>
                        </form>
                        <%}%>
                </div>
            </div>
            <% if (recipes.length !== 0) {%>
                <div class="col-3 mt-5">
                    <ul class="row list-unstyled">
                        <% for(var i=0; i<recipes.length; i++) {%>
                            <li class="col-6 justify-content-between mt-5">
                                <a href="/menu/recipe/<%= recipes[i]._id%>">
                                    <img class="img-fluid" src="<%= recipes[i].image%>">
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </div>
            <%}%>
            
            <div class="col-6 mt-5">
                <a class="btn btn-primary" href="/createRestaurant">Create a new Restaurant</a>
                <a class="btn btn-primary" href="/createRecipe/<%= restaurant._id%>">Create a new Recipe</a>
                <a class="btn btn-primary" href="/restaurantList">Return to the Restaurant List</a>
            </div>
        </div>
    </div>

    <%- include('partials/footer') -%>