<%- include('partials/header') -%>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-6">
                <h2>
                    <%= recipe.name %>
                </h2>
                <img class="img-fluid" src="<%= recipe.image%>" />
                <div class="row justify-content-between">
                    <form class="col-1" action="/menu/likeRecipe/<%= recipe.id %>?_method=PUT" method="POST">
                        <button class="btn btn-primary fa fa-heart" type="submit"></button>
                    </form>
                    <h3 class="col-3">Likes: <%= recipe.likes %>
                    </h3>
                    <%if(recipe.user==user.id){ %>
                        <form action="/menu/deleteRecipe/<%= recipe.id %>?_method=DELETE" method="POST" class="col-3">
                            <button class="btn btn-primary fa fa-trash" type="submit"></button>
                        </form>
                        <%}%>
                </div>
            </div>
            <div class="col-3 mt-5">
                <h4>Description</h4>
                <p>
                    <%= recipe.description %>
                </p>
                <h4>Ingredients</h4>
                <p>
                    <%= recipe.ingredients %>
                </p>
                <h4>Directions</h4>
                <p>
                    <%= recipe.directions %>
                </p>
            </div>
            <div class="col-6 mt-5">
                <a class="btn btn-primary" href="/menu/<%= recipe.restaurant%>">Back to Restaurant</a>
                <a class="btn btn-primary" href="/restaurantList">Return to the Restaurant List</a>
            </div>
        </div>
    </div>

    <%- include('partials/footer') -%>